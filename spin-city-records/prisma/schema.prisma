model User {
  id               String         @id @default(cuid())
  name             String?
  username         String
  email            String?        @unique
  image            String?
  // accounts         Account[]
  // sessions         Session[]
  review           Review[]
  listing          Listing[]
  seller           Boolean
  sentMessages     ChatMesssage[] @relation("sentMessages")
  receivedMessages ChatMesssage[] @relation("receivedMessages")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
